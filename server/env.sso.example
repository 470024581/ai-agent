# Auto-SSO Refresh Configuration
# When Bedrock SSO fails, automatically attempt to refresh SSO token
# This will open a browser window for SSO login

# Enable auto-SSO refresh (default: true)
ENABLE_AUTO_SSO_REFRESH=true

# Original Bedrock configuration (will be attempted first)
LLM_PROVIDER=bedrock
EMBEDDING_PROVIDER=bedrock
AWS_REGION=ap-southeast-2
AWS_PROFILE=DevOpsPermissionSet-412381743093

# Bedrock models
BEDROCK_MODEL_ID=mistral.mixtral-8x7b-instruct-v0:1
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
BEDROCK_EMBEDDING_DIMENSION=1024

# Other configurations
DATABASE_URL=sqlite:///./data/smart.db
FRONTEND_DIR=../client/dist
